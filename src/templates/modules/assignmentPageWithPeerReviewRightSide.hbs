<div class="mmooc-assignment-rightside">
	<div class="mmooc-assignment-responses">
		<h3>Besvarelser</h3>
		<div class="mmooc-assignment-responses-contents">
			<p class="mmooc-assignment-delivery-date{{#if submission.late}} late{{/if}}">Levert {{norwegianDateAndTime submission.submitted_at}}{{#if submission.late}} (for sen){{/if}}</p>
			{{#if submission.attachments}}
				<ul class="mmooc-assignment-files">
					{{#each submission.attachments}}
                        <li>
							<a href="{{url}}" class="file-big">{{display_name}}</a>
						</li>
                    {{/each}}
				</ul>
            {{/if}}
		</div>
		<div class="mmooc-assignment-details">
			{{#ifAllPeerReviewsAreComplete peerReview}}
			<a href="{{getPathFromUrl submission.preview_url}}">Vis detaljer om innlevering &raquo;</a>
			{{else}}
    		<p>Du må gjøre hverandre-vurderingen(e) nedenfor før du kan se detaljer om din oppgave.</p>
			{{/ifAllPeerReviewsAreComplete}}
		</div>
	</div>
	<div class="mmooc-peer-reviews">
		<h3>Hverandrevurdering tildelt deg</h3>
		<ul class="unstyled_list">
			{{#unless peerReview.length}}
				<li>Ingen innleveringer tildelt</li>
			{{/unless}}
			{{#each peerReview}}
				<li>
					<a class="{{getPeerReviewWorkflowIconClass workflow_state}}" href="{{assessor.mmooc_url}}">{{assessor.display_name}}</a>
				</li>	
			{{/each}}
		</ul>
	</div>
</div>
